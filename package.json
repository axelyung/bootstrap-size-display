{
  "name": "bootstrap-size-display",
  "version": "1.0.0",
  "description": "Development utility to see current bootstrap size in the browser ",
  "main": "index.js",
  "author": "Axel Yung <axelyung@gmail.com>",
  "repository": "github:axelyung/bootstrap-size-display",
  "license": "MIT",
  "scripts": {
    "build:module": "babel ./src --out-dir ./ --presets env,minify",
    "build:umd": "webpack ./src/umd.js ./umd.js -p --output-library-target=umd",
    "watch": "yarn build:module --watch & yarn build:umd --watch",
    "build": "yarn build:module && yarn build:umd"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0",
    "webpack": "^3.10.0"
  }
}
